/* src/app/notes/notes.css */

:root {
    --swiss-dark: #333;
    --swiss-light: #f4f4f4;
    --swiss-grey: #ccc;
    --swiss-medium-grey: #999;
    --swiss-accent: #007bff; /* A subtle blue for active states */
    --font-family-sans: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    --font-family-mono: 'SFMono-Regular', Consolas, 'Liberation Mono', Menlo, Courier, monospace;
}

body {
    margin: 0;
    font-family: var(--font-family-sans);
    color: var(--swiss-dark);
    background-color: var(--swiss-light);
    line-height: 1.6;
}

.notes-app {
    display: flex;
    height: 100vh;
    border: 1px solid var(--swiss-grey);
}

.notes-sidebar {
    width: 250px;
    border-right: 1px solid var(--swiss-grey);
    display: flex;
    flex-direction: column;
    background-color: #fff;
}

.notes-actions {
    padding: 10px;
    border-bottom: 1px solid var(--border-color);
    display: flex;
    gap: 5px;
}

.notes-actions button {
    background-color: var(--swiss-dark);
    color: var(--swiss-light);
    border: none;
    padding: 8px 12px;
    cursor: pointer;
    font-size: 1.2em;
    line-height: 1;
    border-radius: 3px;
    transition: background-color 0.2s ease;
}

.notes-actions button:hover:not(:disabled) {
    background-color: var(--swiss-medium-grey);
}

.notes-actions button:disabled {
    opacity: 0.5;
    cursor: not-allowed;
}

#note-list {
    list-style: none;
    padding: 0;
    margin: 0;
    flex-grow: 1;
    overflow-y: auto;
}

.note-list-item {
    padding: 10px 15px;
    border-bottom: 1px solid var(--swiss-light);
    cursor: pointer;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    transition: background-color 0.2s ease;
}

.note-list-item:hover {
    background-color: var(--swiss-light);
}

.note-list-item.active {
    background-color: var(--swiss-accent);
    color: #fff;
}

.notes-main {
    flex-grow: 1;
    display: flex;
}

#note-editor,
#note-preview {
    flex: 1;
    padding: 20px;
    overflow-y: auto;
}

#note-editor {
    border: none;
    border-right: 1px solid var(--swiss-grey);
    font-family: var(--font-family-mono);
    font-size: 1em;
    line-height: 1.5;
    resize: none;
    outline: none;
    background-color: #fcfcfc;
    color: var(--swiss-dark);
}

#note-preview {
    background-color: #fff;
    font-size: 1em;
    line-height: 1.6;
    color: var(--swiss-dark);
}

/* Basic Markdown body styling for preview */
.markdown-body h1 {
    font-size: 2em;
    margin-bottom: 0.5em;
}

.markdown-body h2 {
    font-size: 1.5em;
    margin-bottom: 0.5em;
}

.markdown-body p {
    margin-bottom: 1em;
}

.markdown-body ul,
.markdown-body ol {
    margin-left: 20px;
    margin-bottom: 1em;
}

.markdown-body code {
    font-family: var(--font-family-mono);
    background-color: var(--swiss-light);
    padding: 2px 4px;
    border-radius: 3px;
}

.markdown-body pre {
    background-color: var(--swiss-light);
    padding: 10px;
    border-radius: 3px;
    overflow-x: auto;
}

.markdown-body pre code {
    background-color: transparent;
    padding: 0;
}

.markdown-body blockquote {
    border-left: 4px solid var(--swiss-grey);
    padding-left: 10px;
    color: var(--swiss-medium-grey);
    margin-left: 0;
}
